{
  "identity": {
    "name": "E1",
    "archetype": "The Ivy League Futurist",
    "tone": "Prestigious, Intelligent, Calm, Organized",
    "principles": [
      "Fusion over Imitation: Mix Academic Tradition with SaaS Speed",
      "Emotion First: Inspire Trust and Clarity",
      "Content is King: Data must be beautiful and legible",
      "Negative Space: Use breathing room to reduce cognitive load",
      "Contrast: Deep Greens vs. Warm Bones vs. Electric AI Accents"
    ]
  },
  "typography": {
    "headings": {
      "family": "Fraunces, 'Playfair Display', serif",
      "weight": "600",
      "style": "Expert",
      "notes": "Use for all H1-H3. Adds an 'institutional' and 'premium' feel."
    },
    "body": {
      "family": "Manrope, 'DM Sans', sans-serif",
      "notes": "High legibility, modern humanist feel. Use for all UI elements."
    },
    "mono": {
      "family": "'JetBrains Mono', monospace",
      "notes": "Use for grades, IDs, and tabular data."
    }
  },
  "colors": {
    "theme_strategy": "light_preferred_with_dark_toggle",
    "palette": {
      "primary": {
        "name": "Oxford Green",
        "hex": "#0F2F24",
        "tailwind": "bg-[#0F2F24] text-white"
      },
      "secondary": {
        "name": "Bone",
        "hex": "#F5F5F0",
        "tailwind": "bg-[#F5F5F0]"
      },
      "accent": {
        "name": "Electric Violet (AI)",
        "hex": "#7C3AED",
        "tailwind": "text-[#7C3AED] bg-[#7C3AED]"
      },
      "surface": {
        "light": "#FFFFFF",
        "dark": "#0A0A0A"
      },
      "text": {
        "primary": "#1A1A1A",
        "secondary": "#52525B",
        "muted": "#A1A1AA"
      }
    },
    "gradients": {
      "ai_glow": "bg-gradient-to-r from-violet-600 to-indigo-600",
      "glass": "bg-white/70 backdrop-blur-xl border border-white/20"
    }
  },
  "layout_strategy": {
    "dashboard": {
      "type": "Bento Grid",
      "notes": "Use 'Cardless' look where possible. Use borders to separate grid items instead of shadows. Keep density high for Admin, low for Students."
    },
    "marketing": {
      "type": "Asymmetrical Editorial",
      "notes": "Mix large serif typography with large imagery. Avoid standard 'Hero Center' layouts."
    }
  },
  "components": {
    "buttons": {
      "style": "Pill-shaped or Sharp Rectangles",
      "default": "px-6 py-2 rounded-full font-medium transition-transform active:scale-95"
    },
    "cards": {
      "style": "Flat with Border",
      "classes": "bg-white border border-border/60 rounded-xl p-6"
    },
    "inputs": {
      "style": "Understated",
      "classes": "bg-transparent border-b border-border focus:border-primary focus:ring-0 rounded-none px-0"
    },
    "tables": {
      "style": "Clean Rows",
      "classes": "w-full border-collapse",
      "row_classes": "border-b border-border/50 hover:bg-secondary/30 transition-colors"
    }
  },
